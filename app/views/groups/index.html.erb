<div class="row">
  <div class="large-8 columns">
    <h1>Active Groups</h1>
    <h4>Start looking for your golf group!</h4>
  </div>

  <%= form_tag groups_path, :method => 'get' do %>
  <div class="large-4 columns">
    <div class="panel">
      <label for="search">Search city, course, day, title:
      <%= text_field_tag :search, params[:search] %>
      </label>
      <%= submit_tag "Search", name: nil, class: "search-button right" %>
    </div>
  </div>
  <% end %>
</div>


<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <% @groups.each do |group| %>


      <div class="large-4 medium-4 columns left">
        <div class="panel">

          <h4><%= link_to "#{group.title}", group_path(group) %></h4>
          <p><%= group.city %>  |  <%= group.day %><br />
          Course: <%= group.course %></p>

          <div class="group-sublist">
          <div class="row">
            <div class="large-4 columns">
              <p>Age<br /><%= group.age %></p>
            </div>
            <div class="large-4 columns">
              <p>Handicap<br /><%= group.handicap %></p>
            </div>
            <div class="large-4 columns">
              <p>Size<br /><%= group.group_size %></p>
            </div>
          </div>

          </div>
          <p><%= link_to "Join this Group", sendemail_group_path(group), class:"button" %></p>
        </div>
      </div>


      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <hr />
  <div class="large-12 columns">
    <h4>Can't find what you're looking for?</h4>
  </div>
  <div class="large-4 large-offset-4 left columns">
    <%= link_to "Create a Group", new_group_path, class:"button expand" %>
  </div>
</div>