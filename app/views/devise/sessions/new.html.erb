	
<div class="push-2 medium-8 columns">
	<div class="row">
		<div class="small-12 large-12 columns">
			<h2>Sign in</h2>
		</div>
	</div>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="row">
	  	<div class="small-6 large-6 columns">	
			  <div class="form-inputs">
			    <%= f.input :email, :required => false, :autofocus => true %>
			    <%= f.input :password, :required => false %>
			    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign in" %>
			  </div>
				<% end %>
				<div class="padding-top text-center">
					<%= link_to "Forgot your password? |", new_password_path(resource_name) %>
					<%= link_to "Sign up", new_registration_path(resource_name) %>
				</div>	
			</div>

			<div class="small-6 large-6 columns padding-top text-center">
				 <%- resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "  Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "fi-social-facebook size-24 button fbbutton" %><br />
	  <% end -%>
	  

			</div>
	</div>
</div>		
